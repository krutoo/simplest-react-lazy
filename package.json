{
  "name": "simplest-react-lazy",
  "version": "0.0.10",
  "description": "Alternative to React.lazy with able to full coverage testing in Jest",
  "main": "./dist/commonjs/index.js",
  "module": "./dist/module/index.js",
  "files": [
    "dist",
    "src"
  ],
  "scripts": {
    "lint": "eslint src",
    "test": "npm run test:lib && npm run test:example",
    "test:lib": "cross-env BABEL_ENV=test jest --roots src",
    "test:example": "cross-env BABEL_ENV=test jest --roots example",
    "build": "npm run build:clean && npm run build:commonjs && npm run build:module",
    "build:clean": "rimraf build",
    "build:commonjs": "cross-env BABEL_ENV=commonjs babel src -d build/commonjs --source-maps --ignore \"src/__test__/**/*\"",
    "build:module": "cross-env BABEL_ENV=module babel src -d build/module --source-maps --ignore \"src/__test__/**/*\"",
    "dist": "npm run dist:prep && npm publish build && npm run dist:post",
    "dist:prep": "npm run build && cp ./package.json build && cp ./readme.md build",
    "dist:post": "rm -f build/package.json && rm -f build/readme.md",
    "dist:nopublish": "echo 'Use `npm run dist` instead of `npm publish`!' && exit 1",
    "preversion": "npm run lint",
    "postversion": "git push && git push --tags",
    "prepublishOnly": "if [[ ! $PWD =~ build$ ]]; then npm run dist:nopublish; fi"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/krutoo/simplest-react-lazy.git"
  },
  "keywords": [
    "react",
    "lazy",
    "suspense",
    "jest",
    "test"
  ],
  "author": "Dmitry Petrov",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/krutoo/simplest-react-lazy/issues"
  },
  "homepage": "https://github.com/krutoo/simplest-react-lazy#readme",
  "peerDependencies": {
    "react": "^16.12.0"
  },
  "dependencies": {},
  "devDependencies": {
    "@babel/cli": "^7.12.10",
    "@babel/core": "^7.9.0",
    "@babel/preset-env": "^7.9.0",
    "@babel/preset-modules": "^0.1.3",
    "@babel/preset-react": "^7.9.4",
    "babel-jest": "^25.2.6",
    "cross-env": "^7.0.2",
    "enzyme": "^3.11.0",
    "enzyme-adapter-react-16": "^1.15.2",
    "eslint": "^6.8.0",
    "eslint-config-krutoo": "0.0.7",
    "jest": "^25.2.7",
    "react": "^16.13.1",
    "react-dom": "^16.13.1",
    "react-test-renderer": "^16.13.1",
    "rimraf": "^3.0.2"
  }
}
