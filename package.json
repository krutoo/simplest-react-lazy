{
  "name": "simplest-react-lazy",
  "version": "0.0.4",
  "description": "Alternative to React.lazy with able to full coverage testing in Jest",
  "main": "./build/index.js",
  "browser": "./build/index.js",
  "module": "./build/index.js",
  "scripts": {
    "lint": "eslint src",
    "test": "cross-env BABEL_ENV=test jest",
    "build": "cross-env BABEL_ENV=build babel src -d build --source-maps",
    "prepare": "npm run build",
    "preversion": "npm run lint",
    "postversion": "git push && git push --tags"
  },
  "files": [
    "build/**/*"
  ],
  "repository": {
    "type": "git",
    "url": "git+https://github.com/krutoo/simplest-react-lazy.git"
  },
  "keywords": [
    "react",
    "lazy",
    "suspense",
    "jest",
    "test"
  ],
  "author": "Dmitry Petrov",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/krutoo/simplest-react-lazy/issues"
  },
  "homepage": "https://github.com/krutoo/simplest-react-lazy#readme",
  "peerDependencies": {
    "react": "^16.12.0"
  },
  "dependencies": {
    "lodash": "^4.17.15"
  },
  "devDependencies": {
    "@babel/cli": "^7.8.4",
    "@babel/core": "^7.9.0",
    "@babel/preset-env": "^7.9.0",
    "@babel/preset-modules": "^0.1.3",
    "@babel/preset-react": "^7.9.4",
    "babel-jest": "^25.2.6",
    "cross-env": "^7.0.2",
    "enzyme": "^3.11.0",
    "enzyme-adapter-react-16": "^1.15.2",
    "eslint": "^6.8.0",
    "eslint-config-krutoo": "0.0.7",
    "jest": "^25.2.7",
    "react-dom": "^16.13.1",
    "react-test-renderer": "^16.13.1"
  }
}
